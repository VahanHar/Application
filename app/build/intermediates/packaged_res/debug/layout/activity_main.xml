<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0A1A">


    <TextView
        android:text="PCPlanner"
        android:textColor="#E13974"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:typeface="monospace"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:src="@drawable/comparison_icon"
            android:background="@drawable/my_button_background"
            android:layout_marginTop="40dp"
            android:id="@+id/comparison_button"
            android:onClick="openComparisonActivity"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:gravity="center"/>

        <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Comparison"
    android:textColor="@color/white"
    android:layout_marginBottom="10dp"
    android:textSize="30sp"
    />
        <ImageView
            android:src="@drawable/configuration_icon"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:background="@drawable/my_button_background"
            android:id="@+id/configuration_button"
            android:onClick="openConfigurationActivity"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuration"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"
            />
    </LinearLayout>

</RelativeLayout>
